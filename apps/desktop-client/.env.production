# EKD Desk Desktop Client - Production Environment Configuration
# This file contains production defaults
# Override these values by setting environment variables or creating .env.production.local

# Application Environment
NODE_ENV=production

# API Configuration (IMPORTANT: Update these to your server's IP/domain)
# These should be set via environment variables in production deployment
EKD_API_BASE_URL=http://192.168.1.101:3001
EKD_SIGNALING_URL=http://192.168.1.101:3002

# Application Settings
EKD_APP_NAME=EKD Desk
EKD_APP_VERSION=1.0.0

# Feature Flags
EKD_ENABLE_DEBUG_LOGS=false
EKD_ENABLE_AUTO_UPDATE=true
EKD_ENABLE_CRASH_REPORTING=true

# Network Configuration
EKD_CONNECTION_TIMEOUT=10000
EKD_MAX_RETRY_ATTEMPTS=5

# Security Configuration
EKD_ENABLE_HTTPS=false
EKD_CERTIFICATE_VALIDATION=true
