# EKD Desk Desktop Client - Development Environment Configuration
# Copy this file to .env.local for local development overrides

# Application Environment
NODE_ENV=development

# API Configuration
EKD_API_BASE_URL=http://localhost:3001
EKD_SIGNALING_URL=http://localhost:3002

# Application Settings
EKD_APP_NAME=EKD Desk (Dev)
EKD_APP_VERSION=1.0.0-dev

# Feature Flags
EKD_ENABLE_DEBUG_LOGS=true
EKD_ENABLE_AUTO_UPDATE=false
EKD_ENABLE_CRASH_REPORTING=false

# Network Configuration
EKD_CONNECTION_TIMEOUT=30000
EKD_MAX_RETRY_ATTEMPTS=3

# Security Configuration
EKD_ENABLE_HTTPS=false
EKD_CERTIFICATE_VALIDATION=false
