# EKD Desk Desktop Client - Custom Environment Configuration Template
# Copy this file to .env.local and customize for your specific deployment

# API Configuration - UPDATE THESE TO YOUR SERVER'S IP/DOMAIN
EKD_API_BASE_URL=http://YOUR_SERVER_IP:3001
EKD_SIGNALING_URL=http://YOUR_SERVER_IP:3002

# Example for remote server:
# EKD_API_BASE_URL=https://api.ekddesk.com
# EKD_SIGNALING_URL=wss://signaling.ekddesk.com

# Example for local network:
# EKD_API_BASE_URL=http://192.168.1.100:3001
# EKD_SIGNALING_URL=http://192.168.1.100:3002

# Application Settings
EKD_APP_NAME=EKD Desk
EKD_APP_VERSION=1.0.0

# Feature Flags
EKD_ENABLE_DEBUG_LOGS=false
EKD_ENABLE_AUTO_UPDATE=true
EKD_ENABLE_CRASH_REPORTING=true

# Network Configuration
EKD_CONNECTION_TIMEOUT=15000
EKD_MAX_RETRY_ATTEMPTS=3

# Security Configuration
EKD_ENABLE_HTTPS=false
EKD_CERTIFICATE_VALIDATION=true
